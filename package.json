{
  "name": "@as-integrations/hapi",
  "private": true,
  "description": "A template for TypeScript projects with pre-configured tooling",
  "version": "1.0.0",
  "author": {
    "name": "David Castro",
    "email": "arimus@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apollo-server-integrations/apollo-server-integration-hapi"
  },
  "homepage": "https://github.com/apollo-server-integrations/apollo-server-integration-hapi",
  "bugs": {
    "url": "https://github.com/apollo-server-integrations/apollo-server-integration-hapi/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0"
  },
  "scripts": {
    "//": "#use npx here to ensure that non-TS users triggering the postinstall script don't need to install TypeScript globally or in their project",
    "build": "npx -p typescript tsc --build tsconfig.build.json",
    "clean": "git clean -dfqX",
    "install-with-npm-8.5": "npm i -g npm@^8.5.0 && npm i",
    "postinstall": "npm run build",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "publish-changeset": "changeset publish",
    "spell-check": "cspell lint '**' --no-progress || (echo 'Add any real words to cspell-dict.txt.'; exit 1)",
    "test": "jest",
    "test:ci": "jest --coverage --ci --maxWorkers=2 --reporters=default --reporters=jest-junit",
    "watch": "tsc --build --watch"
  },
  "devDependencies": {
    "@apollo/server": "4.0.4",
    "@apollo/server-integration-testsuite": "4.0.4",
    "@apollo/utils.withrequired": "^1.0.0",
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/jest": "29.1.1",
    "@types/node": "^14.18.31",
    "cspell": "6.12.0",
    "jest": "29.1.2",
    "jest-junit": "14.0.1",
    "node-fetch": "^2.6.7",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "@apollo/server": "^4.0.0",
    "@hapi/hapi": "^20.2.2"
  },
  "volta": {
    "node": "16.17.1",
    "npm": "8.19.2"
  },
  "dependencies": {
  }
}
